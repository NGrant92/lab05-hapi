<section class="ui raised segment">
  <div class="ui grid">
    <aside class="six wide column">
      <img src="images/homer5.jpg" class="ui medium image">
    </aside>
    <article class="eight wide column">
      <h2>{{currentUser.firstName}} {{currentUser.lastName}}'s Donation Report</h2>
      <table class="ui celled table segment">
        <thead>
        <tr>
          <th>Donor</th>
          <th>Amount</th>
          <th>Method donated</th>
        </tr>
        </thead>
        <tbody>
        {{#each donations}}
          <tr>
            <td> {{donor}} </td>
            <td> {{amount}} </td>
            <td> {{method}} </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </article>
  </div>
</section>